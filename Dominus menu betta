--// Visionário UI Library
-- Cria um ScreenGui na tela com estilo Rayfield, sem tabs.

local Visionario = {}

function Visionario:CreateUI(title)
    -- Criar ScreenGui
    local gui = Instance.new("ScreenGui")
    gui.Name = "VisionarioUI"
    gui.ResetOnSpawn = false
    gui.Parent = game.CoreGui

    -- Criar frame principal
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 380, 0, 250)
    frame.Position = UDim2.new(0.35, 0, 0.3, 0)
    frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true
    frame.Parent = gui

    -- Canto arredondado
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = frame

    -- Título
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 35)
    titleLabel.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    titleLabel.BorderSizePixel = 0
    titleLabel.Text = title or "Visionário Hub"
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 16
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.Parent = frame

    local corner2 = Instance.new("UICorner")
    corner2.CornerRadius = UDim.new(0, 10)
    corner2.Parent = titleLabel

    -- Botão de fechar
    local close = Instance.new("TextButton")
    close.Size = UDim2.new(0, 40, 0, 25)
    close.Position = UDim2.new(0.87, 0, 0.05, 0)
    close.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    close.Text = "X"
    close.TextColor3 = Color3.fromRGB(255, 255, 255)
    close.Font = Enum.Font.GothamBold
    close.TextSize = 14
    close.Parent = frame

    local corner3 = Instance.new("UICorner")
    corner3.CornerRadius = UDim.new(0, 5)
    corner3.Parent = close

    close.MouseButton1Click:Connect(function()
        gui:Destroy()
    end)

    -- Retornar UI para criação de botões
    local content = Instance.new("Frame")
    content.Size = UDim2.new(1, 0, 1, -40)
    content.Position = UDim2.new(0, 0, 0, 40)
    content.BackgroundTransparency = 1
    content.Parent = frame

    function Visionario:CreateButton(text, callback)
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(0.8, 0, 0, 30)
        btn.Position = UDim2.new(0.1, 0, #content:GetChildren() * 0.12, 0)
        btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.Font = Enum.Font.Gotham
        btn.TextSize = 14
        btn.Text = text
        btn.Parent = content

        local c = Instance.new("UICorner")
        c.CornerRadius = UDim.new(0, 5)
        c.Parent = btn

        btn.MouseButton1Click:Connect(function()
            if callback then
                callback()
            end
        end)
    end

    return Visionario
end

return Visionario
